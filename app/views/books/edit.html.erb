<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <p class="error_text">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    </p>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
