<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>
<p>Title</p>
<p><%= f.text_field :title %></p>

<p>Body</p>
<p><%= f.text_area :body %></p>
<p><%= f.submit "Update book" %></p>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
