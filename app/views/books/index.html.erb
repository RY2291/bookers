<body>
 <h1 class="title-1">Books</h1>

 <table>
     <thead>
         <tr>
             <th>Title</th>
             <th>Body</th>
             <th colspan="3"></th>
         </tr>
     </thead>
     <thbody>
         <% @books.each do |book| %>
             <tr>
                 <td><%= book.title %></td>
                 <td><%= book.body %></td>
                 <td><%= link_to "Show", book_path(book.id) %></td>
                 <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                 <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
             </tr>
         <% end %>
     </thbody>
 </table>


 <h2 class="title-2">New book</h2>

 <div class="error">
     <% if @book.errors.any? %>
         <p class="error_text"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
         <ul>
             <% @book.errors.full_messages.each do |message| %>
                 <li><%= message %></li>
             <% end %>
         </ul>
     <% end %>
 </div>

 <%= form_with model: @book, local:true do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <p><%= f.text_area :body %></p>
 <p><%= f.submit "Create Book" %></p>

 <% end %>
</body>